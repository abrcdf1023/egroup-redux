{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": ["packages"],
    "baseUrl": "./",
    "paths": {
      "@e-group/redux-modules/*": ["packages/redux-modules/src/*"]
    },
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "packages/redux-modules/src/**/*"
  ],
  "exclude": ["node_modules"]
}